{
    "title": "Character",
    "description": "D6 Character Model",
    "type": "object",
    "properties": {
        "key": {
            "$ref": "#/definitions/D6Key"
        },
        "traits": {
            "$ref": "#/definitions/D6Traits"
        },
        "state": {
            "$ref": "#/definitions/D6State"
        },
        "attributes": {
            "$ref": "#/definitions/D6Attributes"
        }
    },
    "required": [
        "key",
        "traits",
        "state",
        "attributes"
    ],
    "definitions": {
        "D6Key": {
            "title": "Key",
            "description": "key: character management details for server and clients",
            "type": "object",
            "properties": {
                "id": {
                    "title": "ID",
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "universe": {
                    "title": "Universe",
                    "enum": [
                        "realms",
                        "fantasy"
                    ],
                    "type": "string"
                },
                "player": {
                    "title": "Player email",
                    "type": "string",
                    "format": "email"
                }
            },
            "required": [
                "id",
                "universe",
                "player"
            ]
        },
        "D6Traits": {
            "title": "Traits",
            "description": "traits: descriptive components of character",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Name",
                    "maxLength": 50,
                    "type": "string"
                },
                "age": {
                    "title": "Age",
                    "minimum": 1,
                    "type": "integer"
                },
                "height": {
                    "title": "Height",
                    "maxLength": 20,
                    "type": "string"
                },
                "weight": {
                    "title": "Weight",
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "species": {
                    "title": "Species",
                    "maxLength": 50,
                    "type": "string"
                },
                "hair_color": {
                    "title": "Hair Color",
                    "maxLength": 25,
                    "type": "string"
                },
                "eye_color": {
                    "title": "Eye Color",
                    "maxLength": 50,
                    "type": "string"
                },
                "origin_of_birth": {
                    "title": "Origin of Birth",
                    "maxLength": 50,
                    "type": "string"
                },
                "features": {
                    "title": "Special Features",
                    "default": [],
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "title": "Description",
                    "maxLength": 250,
                    "type": "string"
                },
                "image_url": {
                    "title": "Image URL",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2083,
                    "format": "uri"
                }
            },
            "required": [
                "name",
                "age",
                "height",
                "weight",
                "species",
                "hair_color",
                "eye_color",
                "origin_of_birth"
            ]
        },
        "D6State": {
            "title": "State",
            "description": "state: character points for health and advancement",
            "type": "object",
            "properties": {
                "hp": {
                    "title": "Health Points",
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "ap": {
                    "title": "Advancement Points",
                    "type": "integer",
                    "exclusiveMinimum": 0
                }
            },
            "required": [
                "hp",
                "ap"
            ]
        },
        "D6Attributes": {
            "title": "Attributes",
            "description": "attributes: character attributes and points",
            "type": "object",
            "properties": {
                "dexterity": {
                    "title": "Dexterity",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "strength": {
                    "title": "Strength",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "intelligence": {
                    "title": "Intelligence",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "willpower": {
                    "title": "Willpower",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "endurance": {
                    "title": "Endurance",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "perception": {
                    "title": "Perception",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "social": {
                    "title": "Social",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                },
                "chance": {
                    "title": "Chance",
                    "minimum": 0,
                    "maximum": 6,
                    "type": "integer"
                }
            },
            "required": [
                "dexterity",
                "strength",
                "intelligence",
                "willpower",
                "endurance",
                "perception",
                "social",
                "chance"
            ]
        }
    }
}
